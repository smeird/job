{
    "name": "smeird/job",
    "description": "Slim 4 starter project for job.smeird.com",
    "type": "project",
    "require": {
        "php": "^7.4",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.7",
        "vlucas/phpdotenv": "^5.6",
        "respect/validation": "^2.3",
        "guzzlehttp/guzzle": "^7.9",
        "league/commonmark": "^1.6",
        "dompdf/dompdf": "^1.2",
        "phpoffice/phpword": "^0.18.3",
        "ramsey/uuid": "^4.2",
        "paragonie/constant_time_encoding": "^2.6",
        "php-di/php-di": "^6.4",
        "smalot/pdfparser": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/polyfills.php"
        ]
    },
    "scripts": {
        "start-dev": "php -S localhost:8080 -t public public/index.php",
        "test": [
            "@php -l public/index.php",
            "@php -l src/Bootstrap.php",
            "@php -l src/Routes.php"
        ],
        "cs-fix": "@php -r \"echo 'Code style fixer not configured yet.' . PHP_EOL;\"",
        "verify": "php bin/verify.php --interactive=0 --timeout=180"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
